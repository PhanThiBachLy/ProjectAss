@model WebStore.Controllers.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<style>
    .custom-card {
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        margin-top: 50px;
    }

    .custom-card-header {
        background-color: #a8e6cf;
        border-radius: 15px 15px 0 0 !important;
        padding: 20px;
    }

    .custom-btn {
        background-color: #a8e6cf;
        border: none;
        border-radius: 20px;
        padding: 10px 30px;
        color: #333;
        transition: all 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #333;
            color: white;
        }

    .form-control {
        border-radius: 10px;
        padding: 10px;
    }

    .custom-link {
        color: #333;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .custom-link:hover {
            color: #a8e6cf;
        }
</style>

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card custom-card">
            <div class="custom-card-header">
                <h3 class="text-center mb-0">Login</h3>
            </div>
            <div class="card-body p-4">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-4">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn custom-btn w-100">Login</button>
                    </div>
                }
            </div>
            <div class="card-footer text-center py-3" style="border-radius: 0 0 15px 15px;">
                <p class="mb-0">Don't have an account? @Html.ActionLink("Register here", "Register", null, new { @class = "custom-link" })</p>
            </div>
        </div>
    </div>
</div>